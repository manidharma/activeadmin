<% if current_user %>
<br>
    <div class="container">
    <div class="card text-white bg-dark mb-3" style="max-width: 18rem;">
      <div class="card-header"><%= current_user.email %></div>
      <div class="card-body">
        <h5 class="card-title"><%= current_user.id %></h5>
        <h5 class="card-title"><%= current_user.created_at.strftime("Created on %m/%d/%Y") %></h5>
        <h5 class="card-title"><%= current_user.updated_at.strftime("Updated on %m/%d/%Y") %></h5>
      </div>
    </div>

<% else %>
	None of them are online
<% end %>
